<div class="container">
    <div class="row">
        <h1 class="col-md-12 text-center">Eat da Burger</h1>
    </div>
    <div class="row">
        <h2 class="col-md-5 text-center">Want to Eat</h2>
        <div class="col-md-2"></div>
        <h2 class="col-md-5 text-center">Have Ate</h2>
    </div>
    <div class="row">
        <div class="col-md-5 text-center">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block eaten=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5 text-center">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <p>{{this.burger_name}}</p>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <h2 class="col-md-12 text-center"> Add a Burger</h2>
    </div>
    <div class="row">
        <form class="create-form col-md-12 text-center">
            <div class="form-group">
                <label for="ba">Burger Name:</label>
                <input type="text" id="ba" name="name">
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>